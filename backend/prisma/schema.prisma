// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum MemberStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum ReferralStatus {
  PENDING
  CONTACTED
  NEGOTIATION
  CLOSED_WON
  CLOSED_LOST
}

model MemberApplication {
  id          String            @id @default(cuid())
  firstName   String
  lastName    String
  email       String            @unique
  company     String?
  motivation  String?
  status      ApplicationStatus @default(PENDING)
  submittedAt DateTime          @default(now())
  reviewedAt  DateTime?
  notes       String?

  @@map("member_applications")
  invitations Invitation[]
}

model Invitation {
  id        String   @id @default(cuid())
  token     String   @unique
  email     String
  applicationId String @unique
  application MemberApplication @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
  
  @@map("invitations")
  members Member[]
}

model Member {
  id        String   @id @default(cuid())
  userId    String?  @unique
  email     String   @unique
  firstName String
  lastName  String
  phone     String?
  company   String
  position  String
  industry  String?
  bio       String?
  avatar    String?
  website   String?
  linkedin  String?
  status    MemberStatus @default(ACTIVE)
  joinedAt  DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  invitationId String?
  invitation   Invitation? @relation(fields: [invitationId], references: [id])
  
  @@map("members")
  referralsMade     Referral[] @relation("ReferralsMade")
  referralsReceived Referral[] @relation("ReferralsReceived")
  thanksGiven       Thank[]    @relation("ThanksGiven")
  thanksReceived    Thank[]    @relation("ThanksReceived")
}

model Referral {
  id          String   @id @default(cuid())
  title       String
  description String
  fromMemberId String
  fromMember  Member   @relation("ReferralsMade", fields: [fromMemberId], references: [id])
  toMemberId  String
  toMember    Member   @relation("ReferralsReceived", fields: [toMemberId], references: [id])
  status      ReferralStatus @default(PENDING)
  value       Float?
  company     String?
  contactName String?
  contactInfo String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  closedAt    DateTime?

  @@map("referrals")
  thanks Thank[]
}

model Thank {
  id          String   @id @default(cuid())
  fromMemberId String
  fromMember  Member   @relation("ThanksGiven", fields: [fromMemberId], references: [id])
  toMemberId  String
  toMember    Member   @relation("ThanksReceived", fields: [toMemberId], references: [id])
  message     String
  referralId  String?
  referral    Referral? @relation(fields: [referralId], references: [id])
  createdAt   DateTime @default(now())

  @@map("thanks")
}
